@using MultiPurposeAuthSite.Resources

@{
    ViewBag.Title = ManageViews.AddFIDO2DataTitle;
}

@Scripts.Render("~/bundles/multiauthsite")

@* スクリプト・セクション（RenderSection("HeaderScriptsSection", required: true)に出力されます） *@
@section HeaderScriptsSection{
    <!-- Head 部の section -->
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("AddFIDO2Data", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form", onsubmit = "Fx_OnSubmit();" }))
{
    @Html.AntiForgeryToken()
    <h4>@ManageViews.AddFIDO2DataH4</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-6">
            <button id="fido2_make" type="button" class="btn btn-default">@ManageViews.AddFIDO2DataSubmit</button>
        </div>
    </div>
    <input type="hidden" id="resultId" name="resultId" />
    <input type="hidden" id="credentialType" name="credentialType" />
    <input type="hidden" id="credentialId" name="credentialId" />
    <input type="hidden" id="algorithm" name="algorithm" />
    <input type="hidden" id="publickey" name="publickey" />
    <input type="hidden" id="attestation" name="attestation" />
}

@* スクリプト・セクション（RenderSection("FooterScriptsSection", required: true)に出力されます） *@
@section FooterScriptsSection{
    <!-- Footer 部の section -->
    <script>
        $(function () {
            var accountInfo = {
                rpDisplayName: 'MultiPurposeAuthSite',
                displayName: '@ViewBag.UserName',
                id: '@ViewBag.UserName' // ...credentialId
            };

            var cryptoParameters = [
                {
                    type: 'ScopedCred',
                    algorithm: 'RSASSA-PKCS1-v1_5'
                }
            ];

            $("#fido2_make").on("click", function () {
                navigator.authentication.makeCredential(accountInfo, cryptoParameters)
                    .then(function (result) {
                        // properties
                        $("#credentialType").val(result.credential.type);

                        //$("#resultId").val(result.id);
                        //localStorage["resultId"] = result.id;

                        // ここで、accountInfo.idと同じ値が取得できるが、
                        // getAssertionの時、result.credential.idと一致しないので、
                        // localStorage["credentialId"]に保存する。
                        $("#credentialId").val(result.credential.id);
                        localStorage["credentialId"] = result.credential.id;

                        $("#algorithm").val(result.algorithm); // 現時点では動作しない
                        $("#publickey").val(JSON.stringify(result.publicKey));
                        $("#attestation").val(result.attestation); // 現時点では動作しない

                        // submit
                        $("form").submit();
                    });
            });
        })
    </script>
}

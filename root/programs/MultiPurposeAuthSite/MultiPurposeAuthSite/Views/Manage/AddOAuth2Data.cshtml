@using MultiPurposeAuthSite.Resources
@using MultiPurposeAuthSite.Models.ViewModels

@model ManageAddOAuth2DataViewModel
@{
    ViewBag.Title = ManageViews.AddOAuth2DataTitle;
}

@* スクリプト・セクション（RenderSection("HeaderScriptsSection", required: true)に出力されます） *@
@section HeaderScriptsSection{
    <!-- Head 部の section -->
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("AddOAuth2Data", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form", onsubmit = "Fx_OnSubmit();" }))
{
    @Html.AntiForgeryToken()
    <h4>@ManageViews.AddOAuth2DataH4</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.ClientID, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <div class="form-inline">
                <div class="input-group">
                    @Html.TextBoxFor(m => m.ClientID, new { @class = "form-control", @readonly = "readonly" })
                    <span class="input-group-btn">
                        <input type="submit" class="btn btn-default" name="submit.ClientID" value="@ManageViews.IndexClientIDChangeButton" />
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ClientSecret, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <div class="form-inline">
                <div class="input-group">
                    @Html.TextBoxFor(m => m.ClientSecret, new { @class = "form-control", @readonly = "readonly" })
                    <span class="input-group-btn">
                        <input type="submit" class="btn btn-default" name="submit.ClientSecret" value="@ManageViews.IndexClientSecretChangeButton" />
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RedirectUriCode, new { @class = "col-md-2 control-label" })
        <div class="col-md-3">
            @Html.TextBoxFor(m => m.RedirectUriCode, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RedirectUriToken, new { @class = "col-md-2 control-label" })
        <div class="col-md-3">
            @Html.TextBoxFor(m => m.RedirectUriToken, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.JwtAssertionPublickey, new { @class = "col-md-2 control-label" })
        <div class="col-md-3">
            @Html.TextBoxFor(m => m.JwtAssertionPublickey, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" name="submit.Add" value="@ManageViews.AddOAuth2DataSubmit" />
        </div>
    </div>
}

@* スクリプト・セクション（RenderSection("FooterScriptsSection", required: true)に出力されます） *@
@section FooterScriptsSection{
    <!-- Footer 部の section -->
}

@using MultiPurposeAuthSite.Resources;
@using MultiPurposeAuthSite.Models.ASPNETIdentity.Entity;
@model ApplicationRole

@{
    ViewBag.Title = AdminViews.RolesAdminDeleteTitle;
}

@* スクリプト・セクション（RenderSection("HeaderScriptsSection", required: true)に出力されます） *@
@section HeaderScriptsSection{
    <!-- Head 部の section -->
}

<h2>@ViewBag.Title</h2>
<div class="form-horizontal">
    <h4>@AdminViews.RolesAdminDeleteH4</h4>
    <hr />

    <b>@AdminViews.RolesAdminDeleteB</b>
    <p>@AdminViews.RolesAdminDeleteP</p>

    <div class="form-group">
        <div class="col-md-10">
            @using (Html.BeginForm("Delete", "RolesAdmin", FormMethod.Post, new { onsubmit = "Fx_OnSubmit();" }))
            {
                @Html.AntiForgeryToken()
                <b>@AdminViews.RolesAdminRoleName</b> <text>&#058;</text> <span>@Html.DisplayFor(model => model.Name)</span>
                <input type="submit" value="@AdminViews.RolesAdminDeleteSubmit" class="btn btn-default" />
            }
        </div>
    </div>
</div>

<div>
    @Html.ActionLink(AdminViews.ReturnList, "Index")
</div>


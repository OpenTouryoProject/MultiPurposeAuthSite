@using MultiPurposeAuthSite.Resources;
@using MultiPurposeAuthSite.ViewModels
@model RolesAdminEditViewModel

@{
    ViewBag.Title = AdminViews.RolesAdminEditTitle;
}

@* スクリプト・セクション（RenderSection("HeaderScriptsSection", required: true)に出力されます） *@
@section HeaderScriptsSection{
    <!-- Head 部の section -->
}

<h2>@ViewBag.Title</h2>
<h4>@AdminViews.RolesAdminEditH4</h4>
<hr />
<div class="form-horizontal">
    @using (Html.BeginForm("Edit", "RolesAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form", onsubmit = "Fx_OnSubmit();" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@AdminViews.RolesAdminEditSubmit" class="btn btn-default" />
            </div>
        </div>
    }
</div>

<div>
    @Html.ActionLink(AdminViews.ReturnList, "Index")
</div>

    @* スクリプト・セクション（RenderSection("FooterScriptsSection", required: true)に出力されます） *@
    @section FooterScriptsSection{
        <!-- Footer 部の section -->
    }

@using MultiPurposeAuthSite.Resources;
@using MultiPurposeAuthSite.Models.ASPNETIdentity.Entity;
@model ApplicationRole
@{
    ViewBag.Title = AdminViews.RolesAdminDetailsTitle;
}

@* スクリプト・セクション（RenderSection("HeaderScriptsSection", required: true)に出力されます） *@
@section HeaderScriptsSection{
    <!-- Head 部の section -->
}

<h2>@ViewBag.Title</h2>
<div class="form-horizontal">

    <h4>@AdminViews.RolesAdminDetailsH4</h4>
    <hr />

    <div class="form-group">
        <div class="col-md-10">
            <b>@AdminViews.RolesAdminRoleName</b> &#058; <span>@Html.DisplayFor(model => model.Name)</span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <b>@AdminViews.RolesAdminDetailsUserList</b>
            @if (ViewBag.UserCount == 0)
            {
                <hr />
                <p>@AdminViews.RolesAdminDetailsNoUsers</p>
            }
            else
            {
                <table class="table">
                    @foreach (string item in ViewBag.UserNames)
                    {
                        <tr>
                            <td>
                                @item
                            </td>
                        </tr>
                    }
                </table>
            }
        </div>
    </div>
</div>

<div>
    @Html.ActionLink(AdminViews.RolesAdminEditTitle, "Edit", new { id = Model.Id }) | @Html.ActionLink(AdminViews.ReturnList, "Index")
</div>

@* スクリプト・セクション（RenderSection("FooterScriptsSection", required: true)に出力されます） *@
@section FooterScriptsSection{
    <!-- Footer 部の section -->
}

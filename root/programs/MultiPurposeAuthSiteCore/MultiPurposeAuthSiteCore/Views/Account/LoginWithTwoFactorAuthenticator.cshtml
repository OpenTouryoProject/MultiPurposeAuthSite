@model AccountLoginWithTwoFactorAuthenticatorViewModel
@{
    ViewBag.Title = AccountViews.LoginWithTwoFactorAuthenticatorTitle;
}

@* スクリプト・セクション（RenderSection("HeaderScriptsSection", required: true)に出力されます） *@
@section HeaderScriptsSection{
    <!-- Head 部の section -->
}

<h2>@ViewBag.Title</h2>
<hr />
<p>@AccountViews.LoginWithTwoFactorAuthenticatorP1</p>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
            <input asp-for="RememberMe" type="hidden" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TwoFactorCode"></label>
                <input asp-for="TwoFactorCode" class="form-control" autocomplete="off" />
                <span asp-validation-for="TwoFactorCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMachine">
                        <input asp-for="RememberMachine" />
                        @Html.DisplayNameFor(m => m.RememberMachine)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">@AccountViews.LoginSubmit</button>
            </div>
        </form>
    </div>
</div>
<p> 
    <a asp-action="LoginWithTwoFactorAuthenticatorRecoveryCode" asp-route-returnUrl="@ViewData["ReturnUrl"]">@AccountViews.LoginWithTwoFactorAuthenticatorP2</a>
</p>

@* スクリプト・セクション（RenderSection("FooterScriptsSection", required: true)に出力されます） *@
@section FooterScriptsSection{
    <!-- Footer 部の section -->
}

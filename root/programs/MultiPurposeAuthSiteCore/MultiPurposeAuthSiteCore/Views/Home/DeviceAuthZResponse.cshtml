@{
    ViewBag.Title = "DeviceAuthZResponse";
}

@* スクリプト・セクション（RenderSection("HeaderScriptsSection", required: true)に出力されます） *@
@section HeaderScriptsSection{
    <!-- Head 部の section -->
}

<h2>@ViewBag.Title</h2>
<ul>
    <li>ClientId : @ViewBag.ClientId</li>
    <li>DeviceCode : @ViewBag.DeviceCode</li>
    <li>UserCode : @ViewBag.UserCode</li>
    <li><a href="@ViewBag.VerificationUri" target="_blank">VerificationUri</a></li>
    <li><a href="@ViewBag.VerificationUriComplete" target="_blank">VerificationUriComplete</a></li>
</ul>
@using (Html.BeginForm("DeviceAuthZResponse", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form", onsubmit = "Fx_OnSubmit();" }))
{
    @Html.AntiForgeryToken()
    <input type="hidden" id="@OAuth2AndOIDCConst.client_id" name="@OAuth2AndOIDCConst.client_id" value="@ViewBag.ClientId" />
    <input type="hidden" id="@OAuth2AndOIDCConst.device_code" name="@OAuth2AndOIDCConst.device_code" value="@ViewBag.DeviceCode" />
    <input type="submit" class="btn btn-primary" value="Start polling." />
}
@section FooterScriptsSection{
    <!-- Footer 部の section -->
}